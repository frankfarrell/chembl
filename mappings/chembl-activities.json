{
  "settings": {
    "number_of_shards": 1,
    "number_of_replicas": 0,
    "analysis": {
      "filter": {
        "english_stop": {
          "type": "stop",
          "stopwords": "_english_"
        },
        "english_stemmer": {
          "type": "stemmer",
          "language": "english"
        },
        "english_possessive_stemmer": {
          "type": "stemmer",
          "language": "possessive_english"
        }
      },
      "analyzer": {
        "english": {
          "tokenizer": "standard",
          "filter": [
            "english_possessive_stemmer",
            "lowercase",
            "asciifolding",
            "english_stop"
          ]
        }
      }
    }
  },
  "mappings": {
    "document": {
      "dynamic_templates": [
        {
          "default": {
            "mapping": {
              "type": "string",
              "index": "not_analyzed"
            },
            "match": "*",
            "match_mapping_type": "string"
          }
        }
      ],
      "properties": {
        "activity_comment": {
          "type": "text",
          "fielddata": true,
          "analyzer": "english"
        },
        "activity_id": {
          "type": "long"
        },
        "assay_id": {
          "type": "long"
        },
        "data_validity_comment": {
          "type": "text",
          "index": true
        },
        "doc_id": {
          "type": "long"
        },
        "inactive": {
          "type": "boolean"
        },
        "molregno": {
          "type": "long"
        },
        "standard_flag": {
          "type": "long"
        },
        "standard_relation": {
          "type": "keyword"
        },
        "standard_type": {
          "type": "keyword"
        },
        "standard_value": {
          "type": "double"
        },
	"standard_units": {
          "type": "keyword"
	},
        "pubmed_id": {
          "type": "keyword"
        }
      }
    }
  }
}
