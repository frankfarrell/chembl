{
  "settings": {
    "number_of_shards": 1,
    "number_of_replicas": 0,
    "analysis": {
      "filter": {
        "english_stop": {
          "type": "stop",
          "stopwords": "_english_"
        },
        "english_stemmer": {
          "type": "stemmer",
          "language": "english"
        },
        "english_possessive_stemmer": {
          "type": "stemmer",
          "language": "possessive_english"
        }
      },
      "analyzer": {
        "english": {
          "tokenizer": "standard",
          "filter": [
            "english_possessive_stemmer",
            "lowercase",
            "asciifolding",
            "english_stop"
          ]
        }
      }
    }
  },
  "mappings": {
    "document": {
      "dynamic_templates": [
        {
          "default": {
            "mapping": {
              "type": "string",
              "index": "not_analyzed"
            },
            "match": "*",
            "match_mapping_type": "string"
          }
        }
      ],
      "properties": {
        "abstract": {
           "type": "text",
          "fielddata": true,
          "analyzer": "english"
        },
        "authors": {
          "type": "text",
          "index": true
        },
        "author_list": {
          "type": "keyword",
          "fields": {
            "raw": {
              "type": "text"
            }
          }
        },
        "chembl_id": {
          "type": "keyword"
        },
        "doc_id": {
          "type": "long"
        },
        "doc_type": {
          "type": "keyword"
        },
        "doi": {
          "type": "keyword"
        },
        "first_page": {
          "type": "keyword"
        },
        "issue": {
          "type": "keyword"
        },
        "journal": {
          "type": "keyword"
        },
        "last_page": {
          "type": "keyword"
        },
        "pubmed_id": {
          "type": "keyword"
        },
        "title": {
          "type": "text",
          "fielddata": true,
          "analyzer": "english"
        },
        "volume": {
          "type": "keyword"
        },
        "year": {
          "type": "date",
          "format": "year"
        },
        "patent_id": {
          "type": "keyword"
        }
      }
    }
  }
}
