{
  "settings": {
    "number_of_shards": 1,
    "number_of_replicas": 0,
    "analysis": {
      "filter": {
        "english_stop": {
          "type": "stop",
          "stopwords": "_english_"
        },
        "english_stemmer": {
          "type": "stemmer",
          "language": "english"
        },
        "english_possessive_stemmer": {
          "type": "stemmer",
          "language": "possessive_english"
        }
      },
      "analyzer": {
        "english": {
          "tokenizer": "standard",
          "filter": [
            "english_possessive_stemmer",
            "lowercase",
            "asciifolding",
            "english_stop"
          ]
        }
      }
    }
  },
  "mappings": {
    "document": {
      "dynamic_templates": [
        {
          "default": {
            "mapping": {
              "type": "string",
              "index": "not_analyzed"
            },
            "match": "*",
            "match_mapping_type": "string"
          }
        }
      ],
      "properties": {
        "assay_category": {
          "type": "keyword"
        },
        "assay_desc": {
          "type": "keyword"
        },
        "assay_id": {
          "type": "long"
        },
        "assay_organism": {
          "type": "keyword"
        },
        "assay_type": {
          "type": "keyword"
        },
        "chembl_id": {
          "type": "keyword"
        },
        "confidence_score": {
          "type": "long"
        },
        "description": {
          "type": "text",
          "fielddata": true,
          "analyzer": "english"
        },
        "doc_id": {
          "type": "long"
        },
        "relationship_desc": {
          "type": "keyword"
        },
        "relationship_type": {
          "type": "keyword"
        },
        "tid": {
          "type": "long"
        },
        "pubmed_id": {
          "type": "keyword"
        }
      }
    }
  }
}
